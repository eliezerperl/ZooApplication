@model IEnumerable<ZooDAL.Entities.Animal>

@{
    ViewData["Title"] = "Hot Animals";
}


<div class="shadow" style="position: relative;">
    <img src="~/zooPic.jpg" style="max-height: 600px; width: 100%;" class="img-fluid" alt="Zoo Picture">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: white; padding: 15px; border-radius: 50%;">
        <h1 class="text-center">Eliezer's Zoo</h1>
    </div>
    <div class="text-center" style="position: absolute; top: 55%; left: 50%; transform: translate(-50%, calc(-50% + 80px));">
        <a asp-action="Catalog" class="btn btn-primary">Show Animals</a>
        <div style="margin-top: 15px;">
            <a href="#hotAnimals" class="btn btn-secondary">@ViewData["Title"]</a>
        </div>
    </div>
</div>



<hr />
<h1 class="text-center" id="hotAnimals">@ViewData["Title"]</h1>
<hr />
<div class="card-group justify-content-center">

@foreach (var item in Model) {
    <div class="m-5">
        <div class="card shadow" style="width: 18rem;">
            <img src="~/Uploads/@item.ImagePath" class="card-img-top" alt="...">
            <div class="card-body text-center">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                <p><a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-primary">Details</a></p>
            </div>
        </div>
    </div>
}

</div>
