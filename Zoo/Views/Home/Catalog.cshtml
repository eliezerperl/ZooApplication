@model IEnumerable<ZooDAL.Entities.Animal>

@{
    ViewData["Title"] = "Animals";
}
<div class="card">
    <h1 class="card-header card-title text-center">@ViewData["Title"]</h1>

        <form class="card-body text-center" method="post" asp-action="GetByCategory">
            <select onchange="this.form.submit()" name="categoryId" asp-items="@ViewBag.Categories" >
                <option>All Categories</option>
            </select>
        </form>


</div>

<hr />

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 card-group">

@foreach (var item in Model) {

      <div class="col">
        <div class="card shadow" style="width: 18rem;">
            <img src="~/Uploads/@item.ImagePath" class="card-img-top" alt="...">
          <div class="card-body text-center">
            <h5 class="card-text"><b>Name:</b> @item.Name</h5>
            <p class="card-text">@item.Description</p>
            <p><a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-primary">Details</a></p>
          </div>
        </div>
      </div> 
}

</div>