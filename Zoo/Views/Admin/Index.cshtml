@model IEnumerable<ZooDAL.Entities.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Index</h1>

<p class="text-center">
    <a class="btn btn-secondary" asp-action="Create">Add Animal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Category
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <img src="~/Uploads/@item.ImagePath">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a href="@Url.Action("Edit", new {id=item.Id})" class="btn btn-outline-secondary">Edit</a>
                <a href="@Url.Action("Delete", new {id=item.Id})" class="btn btn-outline-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
